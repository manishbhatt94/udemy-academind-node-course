extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")


block content
  if prods.length > 0
    .grid
      each product in prods
        article.card.product-item
          header.card__header
            h1.product__title #{product.title}
          .card__image
            img(src=(product.imageUrl), alt=(product.title), width="320", height="240", loading="lazy")
          .card__content
            h2.product__price â‚¹#{product.price.toFixed(2)}
            p.product__description #{product.description}
          .card__actions
            a.btn(href=(`/products/${product._id}`)) Details
            include ../includes/add-to-cart.pug
    .centered
      strong
        a(href="/products") View all products
  else
    .centered
      h1 No Products
      a(href="/admin/add-product") Add a product
