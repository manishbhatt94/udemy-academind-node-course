extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")


block content
  if !orders.length
    section.text-center
      h2 Your have placed no orders yet!
      a(href="/products") Check products to shop
  else
    section
      h2 Your Orders
      ul
        each order in orders
          li
            strong Order ID: #{order.id}
          ul Items ordered:
            each product in order.products
              li #{product.title} (Quantity: #{product.orderItem.quantity})
