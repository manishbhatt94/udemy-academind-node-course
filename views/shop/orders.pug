extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/orders.css")


block content
  if !orders.length
    section.centered
      h1 Your have placed no orders yet!
      a(href="/products") Check products to shop
  else
    section
      h1 Your Orders
      ul.orders
        each order in orders
          li.orders__item
            h2
              | Order - # #{order._id}
              | &nbsp;◆&nbsp;
              a(href=(`/orders/${order._id}`)) Invoice
            ul.orders__products
              each item in order.items
                li.orders__products-item
                  a(href=(`/products/${item.product._id}`)) #{item.product.title}
                  | &nbsp;◆&nbsp;
                  | (Quantity: #{item.quantity})
